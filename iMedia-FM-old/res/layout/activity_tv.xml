<?xml version="1.0" encoding="utf-8"?><!-- layout-320x480 -->
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">
  <RelativeLayout android:layout_width="match_parent" android:id="@+id/to_hide_layout" android:layout_height="70dip">
				<ViewFlipper android:id="@+id/vflipper" android:layout_width="360dip" android:layout_height="fill_parent">
					<AbsoluteLayout android:id="@+id/absoluteLayout2" android:layout_width="fill_parent" android:layout_height="fill_parent">
						<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="12dp" android:text="ACTION" android:id="@+id/textView7" android:textColor="#3FC2E9" android:layout_x="66dip" android:layout_y="29dip"></TextView>
						<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="12dp" android:text="ADVENTURE" android:id="@+id/textView7" android:textColor="#3FC2E9" android:layout_x="109dip" android:layout_y="52dip"></TextView>
						<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="20dp" android:text="PUZZLE" android:id="@+id/textView4" android:textColor="#3FC2E9" android:layout_x="187dip" android:layout_y="39dip"></TextView>
						<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="17dp" android:text="SPORT" android:id="@+id/textView6" android:textColor="#3FC2E9" android:layout_x="124dip" android:layout_y="13dip"></TextView>
						<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="15dp" android:text="DATING" android:id="@+id/textView5" android:textColor="#3FC2E9" android:layout_x="236dip" android:layout_y="15dip"></TextView>
						<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="19dp" android:text="ARCADE" android:id="@+id/textView7" android:textColor="#3FC2E9" android:layout_x="269dip" android:layout_y="45dip"></TextView>
					</AbsoluteLayout>
					<LinearLayout android:id="@+id/searchPanel" android:layout_width="fill_parent" android:layout_height="fill_parent">
					</LinearLayout>
				</ViewFlipper>
				<Button android:id="@+id/tagBtn" android:layout_toRightOf="@+id/frameLayout1" android:layout_alignParentRight="true" android:background="@drawable/btn_tags" android:layout_height="35dip" android:layout_width="87dip"></Button>
				<Button android:id="@+id/searchBtn" android:layout_toRightOf="@+id/frameLayout1" android:layout_below="@+id/tagBtn" android:layout_alignParentRight="true" android:background="@drawable/btn_search" android:layout_marginTop="1dip" android:layout_height="35dip" android:layout_width="87dip"></Button>
			</RelativeLayout>
			<LinearLayout android:id="@+id/linearLayout3" android:layout_width="match_parent" android:layout_height="wrap_content" android:background ="@drawable/border"></LinearLayout>
			<RelativeLayout android:layout_width="match_parent" android:id="@+id/relativeLayout4" android:layout_height="wrap_content">
				<TextView android:id="@+id/textView1" android:layout_centerVertical="true" android:paddingTop="4dip"
						  android:textColor="#39c5e5" android:text="SELECTION" android:layout_marginLeft="130dip" android:layout_width="68dip" android:layout_height="19dip" android:textSize="12dp" android:textStyle="bold"></TextView>
				<Button   android:id="@+id/tvBtn" android:background="@drawable/btn_tv" 
						  android:layout_toRightOf="@+id/textView1" android:textSize="14dip" android:layout_height="25dip" android:layout_width="68dip" android:layout_marginLeft="20dip"></Button>
				<TextView android:text="RESULTS" android:id="@+id/textView2" 
						  android:layout_toRightOf="@+id/tvBtn" android:textColor="#39c5e5" 
						  android:textStyle="bold" 
						  android:layout_width="66dip" android:layout_centerVertical="true" android:paddingTop="4dip" 
						  android:textSize="12dp" android:layout_height="19dip" android:layout_marginLeft="20dip"></TextView>
			</RelativeLayout>
			<LinearLayout android:id="@+id/linearLayout2" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="horizontal">
				<RelativeLayout android:layout_width="239dip" android:id="@+id/relativeLayout5" android:layout_height="match_parent" android:layout_marginLeft="5dip" android:layout_marginRight="5dip" android:layout_marginTop="5dip">
					<Button android:textSize="15dp" android:id="@+id/mostPlayedButton" android:layout_width="115dip" android:layout_height="25dip" android:layout_centerHorizontal="true" android:layout_marginBottom="5dip" android:background="@drawable/btn_mostplayed" android:layout_marginTop="5dip"></Button>
					<Button android:id="@+id/recentButton" android:layout_width="80dip" android:layout_height="25dip" android:layout_below="@+id/mostPlayedButton" android:background="@drawable/recent_btn" android:textSize="14dp" android:text="Recent" android:textStyle="bold" android:textColor="#FFFFFF" android:layout_marginLeft="3dip" android:paddingLeft="10dip"></Button>
					<Button android:id="@+id/addedButton" android:layout_height="25dip" android:layout_below="@+id/mostPlayedButton" android:background="@drawable/add_btn" android:textSize="14dp" android:layout_width="70dip" android:layout_marginLeft="1dip" android:layout_marginRight="1dip" android:layout_toRightOf="@+id/recentButton" android:text="Added" android:textColor="#FFFFFF" android:textStyle="bold" android:paddingLeft="12dip" android:paddingTop="2dip"></Button>
					<Button android:id="@+id/moreButton" android:layout_height="25dip" android:layout_toRightOf="@+id/addedButton" android:layout_below="@+id/mostPlayedButton" android:background="@drawable/more_btn2" android:layout_width="60dip" android:paddingTop="2dip" android:text="more..." android:textColor="#FFFFFF" android:textSize="14dp" android:textStyle="bold"></Button>
					<GridView android:id="@+id/tv_grid" android:layout_alignParentLeft="true" android:layout_height="match_parent" android:layout_width="match_parent" android:layout_centerHorizontal="true" android:layout_below="@+id/addedButton" android:numColumns="3" android:layout_marginTop="10dip" android:scrollbars="none"></GridView>
				</RelativeLayout>
				<LinearLayout android:id="@+id/linearLayout4" android:layout_width="wrap_content" android:layout_height="match_parent" android:background ="@drawable/border">
				</LinearLayout>
				<GridView android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/tv_list" android:numColumns="1"  android:scrollbars="none"></GridView>
				
			</LinearLayout>
</LinearLayout>
