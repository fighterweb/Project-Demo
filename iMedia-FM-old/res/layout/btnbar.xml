<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="horizontal" android:background="@drawable/background">
    <LinearLayout android:layout_height="wrap_content" 
    			android:layout_width="35dip" android:id="@+id/linearLayout1" android:orientation="vertical">
        <Button android:layout_height="63dip" android:layout_width="35dip" android:background="@drawable/btn_social_normal" android:id="@+id/btn_page_home"></Button>
        <Button android:layout_height="63dip" android:layout_width="35dip" android:layout_marginTop="1dip" android:background="@drawable/btn_game_normal"  android:id="@+id/btn_page_game"></Button>
        <Button android:layout_height="63dip"  android:layout_width="35dip" android:layout_marginTop="1dip" android:background="@drawable/btn_music_normal" android:id="@+id/btn_page_music"></Button>
        <Button android:layout_height="63dip"  android:layout_width="35dip" android:layout_marginTop="1dip" android:background="@drawable/btn_video_normal" android:id="@+id/btn_page_video"></Button>
        <Button android:layout_height="63dip"  android:layout_width="35dip" android:layout_marginTop="1dip" android:background="@drawable/btn_tv_normal" android:id="@+id/btn_page_tv"></Button>
    </LinearLayout>
    <ViewFlipper android:layout_width="fill_parent"
    			android:layout_height="fill_parent"    		
    			android:id="@+id/PagesContainer">
    </ViewFlipper>
</LinearLayout>
